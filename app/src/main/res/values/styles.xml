<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/card_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/card_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/card_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/card_vertical_padding</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
